<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="provaAutomatica">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property name="eclipselink.jdbc.platform" value="org.eclipse.persistence.platform.database.H2Platform" />
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"	value="database" />
			
			<property name="javax.persistence.jdbc.driver" value="org.gjt.mm.mysql.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/provaAutomatica"/>
			<property name="javax.persistence.jdbc.user" value="prova"/>
			<property name="javax.persistence.jdbc.password" value="prova123"/>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			
		</properties>
	</persistence-unit>

</persistence>